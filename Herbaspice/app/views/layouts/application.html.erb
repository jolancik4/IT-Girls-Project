<!DOCTYPE html>
<head>
  <html>
    <title>Herba'spice</title>
    <%= stylesheet_link_tag "application", media: "all","data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>

  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= image_tag "logo.jpg", :size=> "250x150" %>
      <div id="page-title"><%= @page_title || "Herba'spice" %></div>
    <div>
      <nav id="herbaspice-user-nav">
        <ul>
          <% if logged_in? %>
            <li><%= link_to "Cart", new_order_path %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li>
              <%= link_to "Log out", logout_path, method: "delete" %>
            </li>
        </ul>
      </li>
        <% else %>
          <li><%= link_to "Register", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
           <% end %>
        </ul>
      </nav>
    </div>
  </div>

<div class="container">
  <ul class="nav-tabs">
        <li><a href="/">Home</a></li>
        <li><a href="/store/index/">Products</a></li>
        <li><a href="/contact/index/">Contact</a></li>
  </ul>
</div>

    <div id="columns">
      <div id="side">
        <div id="cart">
          <% unless @cart.blank? %>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
          <%= render @cart %>
          <%end%>
          <%end%>
        </div>

          <% if logged_in? and admin? %>
          <h2>Admin Menu</h2>
            <li><%= link_to "Carts", carts_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Orders", orders_path %></li>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            <% end %>
        <%= form_tag store_index_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
        </p>
        <% end %>

      </div> <!-- side -->

      <div id="main">
        <%= yield %>
        <div id="mainWrapper"></div>
      </div>

    </div> <!-- columns -->
  </body>
</html>
